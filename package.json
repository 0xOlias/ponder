{
  "name": "ponder-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "typecheck": "pnpm --parallel typecheck",
    "lint": "pnpm --parallel lint",
    "install:packages": "pnpm --filter './packages/**' --parallel install",
    "install:examples": "pnpm --filter './examples/**' --parallel install",
    "build": "pnpm --filter './packages/**' --parallel build",
    "declarations": "pnpm --parallel declarations",
    "test": "pnpm --parallel --no-bail test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "16",
    "pnpm": "7"
  }
}
