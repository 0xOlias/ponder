{
  "name": "@ponder/graph-ts-ponder",
  "description": "Fork of @graphprotocol/graph-ts with host interfaces implemented in Typescript/Node",
  "version": "0.27.0",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "prettier -c **/*.{js,ts}",
    "format": "prettier --write -c **/*.{js,ts}",
    "compile": "esbuild src/index.ts --platform=node --format=cjs --bundle --outfile=dist/index.js",
    "compile-build": "esbuild build.ts --platform=node --format=cjs --bundle --outfile=dist/build.js",
    "build": "pnpm run clean && pnpm run compile && pnpm run compile-build && node dist/build.js"
  },
  "dependencies": {
    "assemblyscript": "0.19.10"
  },
  "devDependencies": {
    "@types/node": "^18.7.8",
    "esbuild": "^0.15.2",
    "prettier": "^2.4.1",
    "typescript": "^4.5.5"
  }
}
