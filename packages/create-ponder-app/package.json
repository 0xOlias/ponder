{
  "name": "create-ponder-app",
  "version": "0.0.16",
  "description": "Tool to bootstrap a Ponder project",
  "license": "MIT",
  "author": "olias.eth",
  "files": [
    "dist"
  ],
  "bin": {
    "create-ponder-app": "./dist/bin/create-ponder-app"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "(tsc || exit 0) && eslint src",
    "format": "prettier src --write",
    "replace-paths": "tsconfig-replace-paths --src src",
    "esbuild": "esbuild `find src \\( -name '*.ts' \\)` --platform=node --format=cjs --outdir=dist && $npm_execpath run replace-paths",
    "build": "$npm_execpath run clean && $npm_execpath run esbuild && mv dist/bin/create-ponder-app.js dist/bin/create-ponder-app",
    "format-dist": "prettier dist --write --loglevel warn",
    "prerelease": "$npm_execpath run build && $npm_execpath run format-dist",
    "release": "$npm_execpath run prerelease && VERSION=$(npm version patch) && npm publish && git add ./package.json && git commit -m \"release(create-ponder-app): $VERSION\""
  },
  "dependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@ponder/ponder": "latest",
    "commander": "^9.4.0",
    "ethers": "^5.6.9",
    "node-fetch": "2",
    "prettier": "^2.6.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.8",
    "@types/node-fetch": "2",
    "@types/prettier": "^2.7.1",
    "esbuild": "^0.15.2",
    "tsconfig-replace-paths": "^0.0.11",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "16",
    "pnpm": "7"
  }
}
