{
  "name": "@ponder/ponder",
  "version": "0.0.8",
  "description": "API builder for blockchain apps",
  "license": "MIT",
  "author": "olias.eth",
  "files": [
    "dist"
  ],
  "bin": {
    "ponder": "./dist/bin/ponder"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "format": "prettier --write src",
    "compile": "esbuild `find src \\( -name '*.ts' \\)` --platform=node --format=cjs --outdir=dist",
    "build": "pnpm run clean && pnpm run compile && mv dist/bin/ponder.js dist/bin/ponder",
    "release": "pnpm run build && VERSION=$(npm version patch) && npm publish && git add ./package.json && git commit -m \"release: $VERSION\""
  },
  "dependencies": {
    "@graphql-codegen/core": "^2.6.2",
    "@graphql-codegen/typescript": "^2.7.3",
    "@ponder/graph-ts-ponder": "workspace:^0.27.0",
    "@typechain/ethers-v5": "^10.0.0",
    "dotenv": "^16.0.1",
    "esbuild": "^0.15.2",
    "ethers": "^5.6.9",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "fastq": "^1.13.0",
    "froebel": "^0.21.3",
    "graphql": "^15.3.0",
    "knex": "^2.2.0",
    "knex-schema-inspector": "^2.0.4",
    "prettier": "^2.6.2",
    "sqlite3": "^5.0.11",
    "typechain": "^8.0.0",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.8",
    "@types/yargs": "^17.0.11",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "16",
    "pnpm": "7"
  }
}
