{
  "name": "@ponder/ponder",
  "private": true,
  "engines": {
    "node": "16",
    "pnpm": "7"
  },
  "scripts": {
    "build": "esbuild `find tool \\( -name '*.ts' \\)` --platform=node --format=cjs --outdir=dist",
    "dev": "pnpm run build --log-level=silent && node dist/dev.js",
    "main": "pnpm run build --log-level=silent && node dist/main.js",
    "prettier": "prettier --write src",
    "lint": "eslint src"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.6.8",
    "@graphql-codegen/core": "^2.6.2",
    "@graphql-codegen/typescript": "^2.7.3",
    "@typechain/ethers-v5": "^10.0.0",
    "ethers": "^5.6.9",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "fastq": "^1.13.0",
    "froebel": "^0.21.3",
    "graphql": "^16.2.0",
    "knex": "^2.2.0",
    "sqlite3": "^5.0.11",
    "typechain": "^8.0.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@taskr/esnext": "^1.1.0",
    "@types/express": "^4.17.13",
    "esbuild": "^0.15.1"
  }
}
