{
  "name": "@ponder/ponder",
  "description": "API builder for blockchain apps",
  "private": true,
  "files": [
    "dist"
  ],
  "bin": {
    "ponder": "./dist/bin/ponder"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "compile-tool": "esbuild `find tool \\( -name '*.ts' \\)` --platform=node --format=cjs --outdir=dist/tool",
    "compile-bin": "esbuild bin/ponder.ts --platform=node --format=cjs --outfile=dist/bin/ponder",
    "build": "pnpm run clean && pnpm run compile-tool && pnpm run compile-bin",
    "dev": "pnpm run build --log-level=silent && node dist/tool/dev.js",
    "main": "pnpm run build --log-level=silent && node dist/tool/main.js",
    "prettier": "prettier --write src",
    "lint": "eslint src"
  },
  "dependencies": {
    "@graphql-codegen/core": "^2.6.2",
    "@graphql-codegen/typescript": "^2.7.3",
    "@typechain/ethers-v5": "^10.0.0",
    "dotenv": "^16.0.1",
    "esbuild": "^0.15.2",
    "ethers": "^5.6.9",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "fastq": "^1.13.0",
    "froebel": "^0.21.3",
    "graphql": "^16.2.0",
    "knex": "^2.2.0",
    "knex-schema-inspector": "^2.0.4",
    "prettier": "^2.6.2",
    "sqlite3": "^5.0.11",
    "typechain": "^8.0.0",
    "typescript": "^4.5.5",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/yargs": "^17.0.11"
  },
  "engines": {
    "node": "16",
    "pnpm": "7"
  }
}
